        android:right="3dp">
        <shape android:shape="rectangle"
            android:dither="true">

            <solid android:color="@color/trans" />
            <corners android:radius="2dip" />

            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"
            android:dither="true">

            <solid android:color="@color/transb" />
            <corners android:radius="2dip" />
        </shape>
    </item>


</layer-list>