
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context=".MainActivity"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="fill_parent"
                    android:layout_height="320dp"
                    android:elevation="2dp"
                    android:foregroundGravity="center"
                    card_view:cardBackgroundColor="@color/WhiteSmoke"
                    card_view:cardCornerRadius="4dp"
                    android:layout_margin="@dimen/margin_tiny"
                    android:layout_gravity="center_horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/transb">

                        <EditText
                            android:id="@+id/post_edit"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp"
                            android:singleLine="true"
                            android:layout_gravity="center_horizontal"
                            android:hint="Digite o nome da instituição"
                            android:textColorHint="@color/LightGrey"
                            android:textColor="@color/black"
                            android:background="@drawable/square_shadow"
                            android:layout_margin="4dp"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/pictureButton"
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:elevation="4dp"
                                android:layout_margin="6dp"
                                android:src="@drawable/slr2"
                                android:background="@color/WhiteSmoke"
                                android:clickable="true"
                                android:layout_gravity="center"/>

                            <ImageView
                                android:id="@+id/picture"
                                android:layout_width="wrap_content"
                                android:layout_height="160dp"
                                android:elevation="4dp"
                                android:layout_margin="8dp"
                                android:clickable="true"
                                android:layout_gravity="center"/>

                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/location_new_text"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/LightGrey"
                                android:singleLine="true"
                                android:layout_margin="4dp"
                                android:paddingLeft="30dp"
                                android:hint="Busque ou digite a localização"
                                android:background="@drawable/square_shadow"/>

                            <ImageView
                                android:id="@+id/location_button"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:src="@drawable/facebook30"
                                android:clickable="true"
                                android:layout_centerVertical="true"
                                android:layout_alignLeft="@+id/location_new_text"
                                android:layout_alignStart="@+id/location_new_text" />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="246dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/post_button"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/margin_medium"
                        android:text="Postar"
                        android:background="@drawable/square_shadowed"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:padding="@dimen/margin_tiny"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
